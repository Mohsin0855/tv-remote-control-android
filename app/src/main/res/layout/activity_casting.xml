<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A2E"
    tools:context=".ui.casting.CastingActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#16213E"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="#FFFFFF"
        app:title="@string/cast_screen"
        app:titleTextColor="#FFFFFF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Cast Icon Animation Area -->
            <ImageView
                android:id="@+id/ivCastIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_cast"
                app:tint="#E94560" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/cast_ready"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- URL Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:visibility="gone"
                app:cardBackgroundColor="#16213E"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#0F3460"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/open_in_browser"
                        android:textColor="#8E8E93"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="#E94560"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textIsSelectable="true" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCopyUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/copy_url"
                        android:textSize="12sp"
                        app:cornerRadius="20dp"
                        app:backgroundTint="#0F3460"
                        style="@style/Widget.Material3.Button.TonalButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Instructions Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#16213E"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#0F3460"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_to_cast"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/cast_instructions"
                        android:textColor="#8E8E93"
                        android:textSize="13sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Start/Stop Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleCast"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="@string/start_casting"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:backgroundTint="#E94560" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
